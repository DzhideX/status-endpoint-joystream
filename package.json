    "@types/bn.js": "^4.11.6",
    "@types/locks": "^0.2.1",
    "bn.js": "^5.1.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "inquirer": "^7.3.3",
    "locks": "^0.2.2",
    "lowdb": "^1.0.0",
    "moment": "^2.27.0",
